# ==============================================
# KHESED-TEK CHURCH SYSTEMS - Environment Configuration
# ==============================================
# This file contains all the environment variables needed for the application
# Copy this file to .env.local for development or set these in your deployment platform

# ==============================================
# CORE APPLICATION SETTINGS
# ==============================================

# Next.js Configuration
NODE_ENV=development
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here

# Build Configuration (Optional)
# NEXT_DIST_DIR=.next
# NEXT_OUTPUT_MODE=

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# PostgreSQL Database Connection String
# Format: postgresql://username:password@localhost:5432/database_name
DATABASE_URL=postgresql://username:password@localhost:5432/khesed_tek_db

# ==============================================
# AUTHENTICATION & SECURITY
# ==============================================

# NextAuth Secret (REQUIRED) - Generate a random 32+ character string
NEXTAUTH_SECRET=your-super-secret-nextauth-key-here

# Cron Job Security Token
CRON_SECRET=your-cron-secret-here

# ==============================================
# EMAIL PROVIDERS
# ==============================================

# Default Email Provider Configuration
DEFAULT_EMAIL_PROVIDER=mailgun
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Khesed-tek Church Systems
SUPPORT_EMAIL=soporte@yourdomain.com

# Mailgun Configuration
ENABLE_MAILGUN=true
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=your-mailgun-domain.com
MAILGUN_FROM_EMAIL=noreply@your-mailgun-domain.com

# Gmail Configuration (Optional)
ENABLE_GMAIL=false
GMAIL_CLIENT_ID=your-gmail-client-id
GMAIL_CLIENT_SECRET=your-gmail-client-secret
GMAIL_REFRESH_TOKEN=your-gmail-refresh-token
GMAIL_ACCESS_TOKEN=your-gmail-access-token
GMAIL_FROM_EMAIL=your-gmail@gmail.com

# Resend Configuration (Optional)
RESEND_API_KEY=your-resend-api-key

# SMTP Configuration (Generic - Optional)
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password

# ==============================================
# SMS & MESSAGING PROVIDERS
# ==============================================

# Default SMS Provider
DEFAULT_SMS_PROVIDER=twilio

# Twilio SMS Configuration
ENABLE_TWILIO_SMS=true
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# WhatsApp Configuration
ENABLE_WHATSAPP=false
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_BUSINESS_ACCOUNT_ID=your-whatsapp-business-account-id
WHATSAPP_PHONE_NUMBER_ID=your-whatsapp-phone-number-id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-whatsapp-webhook-verify-token

# ==============================================
# PUSH NOTIFICATIONS
# ==============================================

# VAPID Keys for Web Push Notifications
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_EMAIL=mailto:support@yourdomain.com

# ==============================================
# PAYMENT GATEWAYS
# ==============================================

# Nequi Payment Gateway (Colombia)
NEQUI_CLIENT_ID=your-nequi-client-id
NEQUI_CLIENT_SECRET=your-nequi-client-secret
NEQUI_API_URL=https://api.nequi.com
NEQUI_TEST_MODE=true
NEQUI_WEBHOOK_URL=https://yourdomain.com/api/webhooks/nequi

# PSE Payment Gateway (Colombia)
PSE_MERCHANT_ID=your-pse-merchant-id
PSE_API_KEY=your-pse-api-key
PSE_TEST_MODE=true
PSE_WEBHOOK_URL=https://yourdomain.com/api/webhooks/pse

# ==============================================
# BIBLE API INTEGRATIONS
# ==============================================

# ESV Bible API
ESV_API_KEY=your-esv-api-key

# API.Bible
API_BIBLE_KEY=your-api-bible-key

# Biblia API
BIBLIA_API_KEY=your-biblia-api-key

# ==============================================
# AI & CONTENT GENERATION
# ==============================================

# AbacusAI for Sermon Generation
ABACUSAI_API_KEY=your-abacusai-api-key

# ==============================================
# TESTING & DEVELOPMENT
# ==============================================

# Test Mode Flag
__NEXT_TEST_MODE=false

# ==============================================
# DEPLOYMENT NOTES
# ==============================================

# VERCEL DEPLOYMENT:
# Set these variables in your Vercel project dashboard under Settings > Environment Variables
# Make sure to set NEXTAUTH_URL to your production domain (e.g., https://yoursite.vercel.app)

# NETLIFY DEPLOYMENT:
# Set these variables in your Netlify project dashboard under Site settings > Environment variables

# DOCKER DEPLOYMENT:
# Mount this file as .env or set these as environment variables in your container

# REQUIRED FOR DEPLOYMENT:
# - DATABASE_URL (PostgreSQL connection string)
# - NEXTAUTH_SECRET (Generate using: openssl rand -base64 32)
# - NEXTAUTH_URL (Your production domain)
# - At least one email provider (MAILGUN recommended)
# - At least one SMS provider (TWILIO recommended)

# OPTIONAL BUT RECOMMENDED:
# - CRON_SECRET for scheduled tasks
# - VAPID keys for push notifications
# - Payment gateway credentials if accepting donations
# - Bible API keys for sermon features